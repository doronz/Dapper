<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/customize_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Customize"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/abc_button_padding_horizontal_material"
        android:layout_marginLeft="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginStart="@dimen/abc_button_inset_horizontal_material" />

    <Button
        android:id="@+id/choose_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Choose"
        android:padding="@dimen/abc_button_padding_horizontal_material"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Delete"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/abc_button_padding_horizontal_material"
        android:layout_marginRight="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginEnd="@dimen/abc_button_inset_horizontal_material"/>

</RelativeLayout>